<UserControl x:Class="TetrisGame.UI.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="700" Width="500">
    <Grid Background="#2D2D30">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="Tetris" FontSize="64" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,50"/>
            <Button Content="Single Player" Width="200" Height="50" Click="SinglePlayer_Click" Background="#3E3E42" Foreground="White" FontWeight="Bold"/>
            <Button Content="Local Battle" Width="200" Height="50" Click="LocalBattle_Click" Background="#3E3E42" Foreground="White" FontWeight="Bold"/>
           
        </StackPanel>
    </Grid>
</UserControl>
